    oneshot

service wlan_loader_rfmd /system/bin/wlan_loader \
    -f /system/etc/wifi/fw_wlan1271_rfmd.bin -i /system/etc/wifi/tiwlan_rfmd.ini \
    -e /pds/wifi/nvs_map.bin
